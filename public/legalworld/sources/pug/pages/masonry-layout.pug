extends  ../_skeleton

//- Includes
include ../components/_ui-thumbnail-corporate

block variables
	- var activeCategory = 'portfolio'
	- var pageName = 'Masonry Layout'

block page
	include ../sections/_header-minimal

	+breadcrumbs({
		category: activeCategory,
		path: [pageName]
	}) 

	section.section.section-lg.oh
		.container
			// Isotope Filters
			.isotope-filters.isotope-filters-modern
				button.isotope-filters-toggle.button.button-sm.button-primary(data-custom-toggle='#isotope-filters', data-custom-toggle-disable-on-blur="true") Filter
					span.caret
				ul.isotope-filters-list#isotope-filters
					li: a.active(data-isotope-filter='*', data-isotope-group='portfolio', href='#') All Types
					li: a(data-isotope-filter='Type 1', data-isotope-group='portfolio', href='#') Type 1 
					li: a(data-isotope-filter='Type 2', data-isotope-group='portfolio', href='#') Type 2

			.isotope.isotope-responsive.row(data-isotope-layout='masonry' data-isotope-group='portfolio')
				.col-sm-6.col-lg-4.isotope-item(data-filter='Type 2')
					+thumbnail-corporate({
						img: 'gallery-masonry-1-370x256',
						link: 'single-project.html',
						title: 'Business Management',
						text: 'We provide companies with tools and strategies to improve operations and plan for the future.'
					})

				.col-sm-6.col-lg-4.isotope-item(data-filter='Type 1')
					+thumbnail-corporate({
						img: 'gallery-masonry-2-370x464',
						link: 'single-project.html',
						title: 'Financial Planning',
						text: 'Our financial planning services help high net-worth individuals manage their monthly payroll and expenses.'
					}).thumbnail-corporate-lg

				.col-sm-6.col-lg-4.isotope-item(data-filter='Type 2')
					+thumbnail-corporate({
						img: 'gallery-masonry-3-370x256',
						link: 'single-project.html',
						title: 'Tax & Accounting',
						text: 'Tax and accounting services form the financial core of our business management services.'
					})

				.col-sm-6.col-lg-4.isotope-item(data-filter='Type 1')
					+thumbnail-corporate({
						img: 'gallery-masonry-4-370x464',
						link: 'single-project.html',
						title: 'Investment Management',
						text: 'From automated investing to portfolio management, we can help you manage your money.'
					}).thumbnail-corporate-lg

				.col-sm-6.col-lg-4.isotope-item(data-filter='Type 1')
					+thumbnail-corporate({
						img: 'gallery-masonry-6-370x464',
						link: 'single-project.html',
						title: 'Consulting & Advisory',
						text: 'Consulting & advisory services provide strategic thinking to improve your business effectiveness.'
					}).thumbnail-corporate-lg
					
				.col-sm-6.col-lg-4.isotope-item(data-filter='Type 2')
					+thumbnail-corporate({
						img: 'gallery-masonry-5-370x256',
						link: 'single-project.html',
						title: 'Business Plan Review',
						text: 'Our Advisory team will jointly analyze and offer objective advice to enhance your business plan.'
					})

	// Page Footer
	include ../sections/_footer-standard
	+footer-standard({
		about: 'COST Accountant is one of the highest rated and most recommended business management companies. We employ the best experts in the nation, while also using innovative techniques to attract more customers to your company.'
	})
