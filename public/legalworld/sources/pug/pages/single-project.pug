extends  ../_skeleton

//- Includes

block variables
	- var activeCategory = 'portfolio'
	- var pageName = 'Single Project'

block page
	include ../sections/_header-minimal

	+breadcrumbs({
		category: activeCategory,
		path: [pageName]
	})

	// Overview
	section.section.section-sm.bg-gray-100
		.container
			// Owl Carousel
			.owl-carousel.owl-carousel-centered-pagination(
			data-items='1'
			data-sm-items='2'
			data-md-items='3'
			data-lg-items='4'
			data-dots='true'
			data-stage-padding='0'
			data-loop='false'
			data-margin='30'
			data-mouse-drag='false')
				.item
					h4 Customer
					p.text-primary Fruits Inc.

				.item
					h4 Services
					ul.list-inline-comma.list-inline-comma-default
						li: a(href='#') SEO
						li: a(href='#') Online Advertising
						li: a(href='#') Research
						li: a(href='#') Branding 
						li: a(href='#') Marketing Strategy
						li: a(href='#') Design
						li: a(href='#') SMM
						li: a(href='#') Accounting
						li: a(href='#') Customer Support
						
				.item
					h4 Brief Description
					p: span(style='max-width: 240px;') Last month we finished our latest project for a local fruit supplier. It included a combination of several marketing strategies
					
				.item
					h4 Term
					p 4 months
					
	// About This Project 
	section.section.section-lg
		.container
			.row.row-50.justify-content-center.justify-content-lg-between.flex-lg-row-reverse
				.col-md-10.col-lg-5.col-xl-4: .inset-left-2 
					h3 About This Project
					h4.h4-smaller Sometimes even small local businesses need professional marketing assistance.
					p This is exactly the case of Fruits Inc., a company located in San Diego, CA. We developed a new marketing strategy from scratch to attract more customers to their products and services.
					a.button.button-primary.button-winona(href='#' style='min-width: 230px;') Read more

				.col-md-10.col-lg-7
					.thumbnail-video-1.bg-gray-700
						.ratio.ratio-16x9: iframe(width='570' height='320' src='//www.youtube.com/embed/QZzbm-FrkGk' allowfullscreen='')
						.thumbnail-video__overlay.video-overlay(style='background-image: url(images/video-preview-1-570x320.jpg)')
							.button-video.button-video-lg
	
	section.section.swiper-container.swiper-slider.swiper-slider-tiny.text-center(
	data-loop='true'
	data-slide-effect='fade'
	data-autoplay='false'
	data-simulate-touch='true') 
		.swiper-wrapper
			.swiper-slide(data-slide-bg='images/single-project-slide-1-1920x760.jpg'): .swiper-slide-caption: .container
			.swiper-slide(data-slide-bg='images/single-project-slide-2-1920x760.jpg'): .swiper-slide-caption: .container
			.swiper-slide(data-slide-bg='images/single-project-slide-3-1920x760.jpg'): .swiper-slide-caption: .container
		.swiper-pagination-outer.container: .swiper-pagination.swiper-pagination-modern.swiper-pagination-marked(data-index-bullet='true')

	include ../sections/_section-our-team
		
	// Testimonials
	section.section.section-lg.bg-gray-100.text-center
		.container
			h3 Testimonials
			include ../includes/_slick-widget-testimonials
		
	include ../sections/_section-thin-cta
			
	// Page Footer	
	include ../sections/_footer-standard
	+footer-standard({
		about: 'COST Accountant is one of the highest rated and most recommended business management companies. We employ the best experts in the nation, while also using innovative techniques to attract more customers to your company.'
	})
